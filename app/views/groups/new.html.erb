<h1>New group</h1>

<%= form_for(@group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p> 
    <%= f.check_box :default %>  <%= f.label :default %>
  </p>
  <p>
    <%= f.submit 'Create Group' %>
  </p>
<% end %>

<%= link_to 'Back', groups_path %>
