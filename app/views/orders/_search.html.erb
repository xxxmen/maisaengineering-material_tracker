<% form_tag search_orders_path, :method => :get do -%>
    <input type="text" value="Search <% if params[:open] %>Open <% end %>Orders" onfocus="InterfaceHelper.clear(this);" onblur="InterfaceHelper.reset(this);" style="font-style: italic; color: gray; width: 180px;" name="q" class="order-search" />
    <% [:year, :state, :status, :location, :unit, :vendor, :group].each do |filter_param| %>
        <% if params.has_key?(filter_param) %>
            <input type="hidden" value="<%= params[filter_param] %>" name="<%= filter_param %>" />
        <% end %>
    <% end %>
<% end -%>
